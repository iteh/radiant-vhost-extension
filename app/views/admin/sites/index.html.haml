.outset
  %table#sites.index{:cellpadding=>"0", :cellspacing=>"0", :border=>"0"}
    %thead
      %tr
        %th.hostname Host
        %th Administration
        %th.users Users
        %th.modify Modify
    %tbody
      - unless @sites.empty?
        - for site in @sites
          %tr.node.level-1
            %td.name
              = link_to image_tag('sites/site.png'), edit_admin_site_url(:id => site), :title => site.title
              = link_to site.title, edit_admin_site_url(:id => site)
            %td.site
              = link_to 'Switch to', switch_to_admin_site_url(site)
            %td.users= site.users.collect(&:name).join(', ')
            %td.actions
              - if site == current_site
                %span.action.disabled= image('minus_disabled') + ' ' + t('remove')
              - else
                = link_to image('minus') + ' ' + t('remove'), remove_admin_site_url(:id => site), :class => "action"
      - else
        %tr
          %td.note{:colspan=>3} No Sites
#actions
  %ul
    %li= link_to image('plus') + ' New Site', new_admin_site_url